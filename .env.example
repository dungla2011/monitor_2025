DB_HOST=your_database_host
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database_name

# Telegram Configuration (Optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot{YOUR_BOT_TOKEN}/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# Enable/Disable Telegram notifications
TELEGRAM_ENABLED=false

# Proxy Configuration (Optional - if Telegram API is blocked)
# HTTP_PROXY=http://your-proxy-server:port
# HTTPS_PROXY=http://your-proxy-server:port
# or socks proxy (requires pysocks: pip install pysocks):

# ============================================
# Firebase Configuration (Optional)
# ============================================

# Path to Firebase service account JSON file
# Download from: Firebase Console → Project Settings → Service Accounts
FIREBASE_SERVICE_ACCOUNT_PATH=firebase_service_account.json

# Test device token (for testing only)
# Get from Android app using FirebaseMessaging.getInstance().getToken()
FIREBASE_TEST_TOKEN=your_firebase_device_token_here

# Enable/Disable Firebase notifications
FIREBASE_NOTIFICATIONS_ENABLED=false

# Firebase Throttle Settings
# FIREBASE_THROTTLE_ENABLED=true means only send first error (skip consecutive errors)
# FIREBASE_THROTTLE_ENABLED=false means send all errors based on time throttle (alert_throttle_seconds)
FIREBASE_THROTTLE_ENABLED=true


# ============================================
# Email Notification Configuration (Optional)
# ============================================

# Enable/Disable Email notifications
SMTP_ENABLED=false

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# SMTP Account 1 (Primary)
SMTP_ACCOUNT_1_EMAIL=your-email@gmail.com
SMTP_ACCOUNT_1_PASSWORD=your-app-password  # Get from: https://myaccount.google.com/apppasswords

# SMTP Account 2 (Backup - Optional)
SMTP_ACCOUNT_2_EMAIL=
SMTP_ACCOUNT_2_PASSWORD=

# SMTP Account 3 (Backup - Optional)
SMTP_ACCOUNT_3_EMAIL=
SMTP_ACCOUNT_3_PASSWORD=

# Email settings
SMTP_FROM_NAME=Monitor Alert System

# Email Throttle Settings (higher than Telegram/Firebase to avoid spam)
# Email ALWAYS throttles consecutive errors (only sends first error)
EMAIL_THROTTLE_SECONDS=300  # 5 minutes default

# HTTP_PROXY=socks5://your-proxy-server:port
# HTTPS_PROXY=socks5://your-proxy-server:port
